{
    "launchers": {
        "JasmineNode": {
            "command": "jasmine-node test/node"
        },
        "SASS": {
            "command": "grunt sass:dev"
        },
        "JSHint": {
            "command": "jshint src/**/*.js"
        }
    },
    "launch_in_dev": [
        "PhantomJS",
        "JSHint"
    ],
    "launch_in_ci": [
        "PhantomJS",
        "JSHint"
    ],
    "src_files": [
        "src/**/*.js",
        "test/js/**/*.js"
    ],
    "watch_files": [
        "src/**/*.js",
        "test/js/**/*.js"
    ]
}