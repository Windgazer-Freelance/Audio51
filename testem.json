{
    "launchers": {
        "JasmineNode": {
            "command": "jasmine-node test/node"
        },
        "SASS": {
            "command": "grunt sass:dev"
        },
        "JSHint": {
            "command": "jshint src test/js"
        }
    },
    "launch_in_dev": [
        "Chrome",
        "Safari",
        "JSHint"
    ],
    "launch_in_ci": [
        "Chrome",
        "JSHint"
    ],
    "src_files": [
        "lib/require/require.js",
        "test/bootstrap.js",
        "liblocal/*.js",
        "src/testframework.js",
        "test/js/**/*.mp3",
        "test/js/**/*.js"
    ],
    "watch_files": [
        "src/**/*.js",
        "test/js/**/*.js"
    ]
}